@model ShopTARge23.Models.RealEstates.RealEstateCreateUpdateViewModel

@{
    ViewBag.Title = Model.Id.HasValue && Model.Id != Guid.Empty ? "Edit Property" : "Add New Property";
}

<h1>@ViewBag.Title</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="@(Model.Id.HasValue && Model.Id != Guid.Empty ? "Edit" : "Create")" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (Model.Id.HasValue && Model.Id != Guid.Empty)
            {
                <input asp-for="Id" type="hidden" />
                <input asp-for="CreatedAt" type="hidden" />
            }

            <div class="form-group mb-3">
                <label asp-for="Size" class="control-label"></label>
                <input asp-for="Size" class="form-control" step="0.01" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RoomNumber" class="control-label"></label>
                <input asp-for="RoomNumber" class="form-control" />
                <span asp-validation-for="RoomNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="BuildingType" class="control-label"></label>
                <select asp-for="BuildingType" class="form-control">
                    <option value="">-- Select Building Type --</option>
                    <option value="Apartment">Apartment</option>
                    <option value="House">House</option>
                    <option value="Condo">Condo</option>
                    <option value="Townhouse">Townhouse</option>
                    <option value="Villa">Villa</option>
                    <option value="Office">Office</option>
                    <option value="Commercial">Commercial</option>
                </select>
                <span asp-validation-for="BuildingType" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Files" class="control-label"></label>
                <input asp-for="Files" class="form-control" type="file" multiple accept="image/*" />
                <div class="form-text">You can upload multiple images (JPG, PNG, GIF)</div>
            </div>

            <div class="form-group">
                <input type="submit" value="@(Model.Id.HasValue && Model.Id != Guid.Empty ? "Update" : "Create")" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}