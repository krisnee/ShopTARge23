@model ShopTARge23.Models.RealEstates.RealEstateDeleteViewModel

@{
    ViewBag.Title = "Delete Property";
}

<h1>Delete Property</h1>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this property?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-header">
        <h4>@Html.DisplayFor(model => model.Location)</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Size)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Size) m²</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.RoomNumber)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.RoomNumber)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.BuildingType)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.BuildingType)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this property?')" />
        </form>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</div>

